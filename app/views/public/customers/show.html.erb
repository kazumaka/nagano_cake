<div class="container">
  <h4 class="mt-4 mb-4 lead bg-light">マイページ</h4>

  <div class="mb-3">
    <label class="mr-2">登録情報</label>
    <%= link_to edit_customer_path,class: "btn btn-success" do %>
      編集する
    <% end %>
  </div>

  <table class="table">
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>

  <div class="mb-3">
    <label class="mr-4">配送先</label>
    <%= link_to addresses_path,class: "btn btn-primary" do %>
      一覧を見る
    <% end %>
  </div>


  <div>
    <label class="mr-2">注文履歴</label>
    <%= link_to root_path,class: "btn btn-primary" do %>
      一覧を見る
    <% end %>
  </div>
</div>