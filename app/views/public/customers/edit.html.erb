<div class="container">
  <div class="col-md-2"></div>
  <div class="col-md-6">
    <label class="mt-4 mb-1 lead bg-light">会員情報編集</label>

    <%= form_with model: @customer,url: customers_path do |f| %>
    <div class="form-group">
      <label>氏名</label>
      <%= f.text_field:last_name %> <%= f.text_field:first_name %>
    </div>
    <div class="form-group">
      <label>フリガナ</label>
      <%= f.text_field:last_name_kana %> <%= f.text_field:first_name_kana %>
    </div>
    <div class="form-group">
      <label>郵便番号</label>
      <%= f.text_field:postal_code %>
    </div>
    <div class="form-group">
      <label>住所</label>
      <%= f.text_field:address %>
    </div>
    <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field:telephone_number %>
    </div>
    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.text_field:email %>
    </div>
    <%= f.submit "編集内容を保存",class: "btn btn-success" %>
    <%= link_to confirm_path,class: "btn btn-danger ml-5" do %>
      退会する
    <% end %>
    <% end %>
  </div>


</div>