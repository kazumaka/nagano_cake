<div class="container">

      <label class="mt-4 mb-4 lead bg-light">ショッピングカート</label>
      <%= link_to destroy_all_path,method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" do %>
        カートを空にする
      <% end %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
               <%= image_tag cart_item.item.get_profile_image(30,30) %><%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td>
              <%= form_with model: cart_item,url: cart_item_path(cart_item.id),method: :patch do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更",class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td>
               <%= link_to cart_item_path(cart_item),method: :delete ,class: "btn btn-danger" do %>
                  削除する
               <% end %>
            </td>
            <% total += cart_item.subtotal %>
          </tr>
        </tbody>
        <% end %>
      </table>
   <div class="row">
      <div class="mr-5">
         <%= link_to root_path,class: "btn btn-primary" do %>
           買い物を続ける
         <% end %>
      </div>
      <div class="col-md-3 col-md-offset-4">
         <table class="table table-bordered">
           <tr>
             <td>合計金額</td>
             <td><%= total %></td>
           </tr>
         </table>
      </div>
   </div>

   <%= link_to new_order_path,class: "btn btn-success" do %>
       情報入力画面に進む
   <% end %>
 </div>