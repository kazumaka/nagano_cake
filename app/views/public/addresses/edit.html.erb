<div class="container">
  <label class="mt-4 mb-4 lead bg-light">配送先編集</label>

  <%= form_with model: @address do |f| %>
  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "変更内容を保存",class: "btn btn-success" %>
  <% end %>
</div>