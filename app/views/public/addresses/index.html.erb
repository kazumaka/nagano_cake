<div class="container">
  <label class="mt-4 mb-4 lead bg-light">配送先登録/一覧</label>

  <%= form_with model: @address do |f| %>
  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録",class: "btn btn-success mb-5" %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to root_path,class: "btn btn-success" do %>
            編集する
          <% end %>
          <%= link_to root_path,class: "btn btn-danger" do %>
            削除する
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>