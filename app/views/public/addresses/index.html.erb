<div class="container">
  <label class="mt-4 mb-4 lead bg-light">配送先登録/一覧</label>

  <%= form_with model: @address do |f| %>
  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="form-group mb-5">
    <label>宛名</label>
    <%= f.text_field :name,class: "mr-5" %>
    <%= f.submit "新規登録",class: "btn btn-success ml-5" %>
  </div>
  <% end %>

  <table class="table table-bordered col-md-8">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to edit_address_path(address.id),class: "btn btn-success mr-5 ml-5" do %>
            編集する
          <% end %>
          <%= link_to destroy_address_path(address.id),class: "btn btn-danger",method: :delete, "data-confirm" => "本当に消しますか？" do %>
            削除する
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>