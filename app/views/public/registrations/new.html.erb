<div class="container">
  <label class="mt-4 mb-4 lead bg-light">新規会員登録</label>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前,class: "mr-5" %>
      <label class="ml-5">(性)<%= f.text_field :last_name %> （名）<%= f.text_field :first_name %></label>
    </div>

    <div class="field">
      <%= f.label :フリガナ,class: "mr-5" %>
      <label>(セイ)<%= f.text_field :last_name_kana %> （メイ）<%= f.text_field :first_name_kana %></label>
    </div>

    <div class="field">
      <%= f.label :メールアドレス,class: "mr-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %>（ハイフンなし）
      <%= f.text_field :postal_code %>
    </div>

    <div class="field">
      <%= f.label :住所,class: "mr-5" %>
      <%= f.text_field :address,class: "ml-5" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %>（ハイフンなし）
      <%= f.text_field :telephone_number %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",class: "ml-3" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>(確認用)
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "ml-5" %>
    </div>

    <div class="actions ml-5 mt-5">
      <%= f.submit "新規登録",class: "btn btn-success" %>
    </div>
  <% end %>
  <!--<%= render "public/shared/links" %>-->
</div>

