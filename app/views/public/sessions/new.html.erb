<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="form-group">
        <label class="mt-4 mb-4 lead bg-light">ログイン</label>
      </div>
      <div>
        <label class="mb-4 lead bg-light">会員の方はこちらからログイン</label>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "ml-3" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password",class: "ml-3" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <!--<%= f.check_box :remember_me %>-->
            <!--<%= f.label :remember_me %>-->
          </div>
        <% end %>

        <div class="actions mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <label class="mt-4 mb-4 lead bg-light">会員登録がお済みでない方</label>
      <p>
        <%= link_to new_customer_registration_path do %>
          こちら
        <% end %>
        から新規登録を行ってください。
      </p>

      <!--<%= render "public/shared/links" %>-->
    </div>
  </div>
</div>
