<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文履歴詳細</label>
  <div class="row">
    <div class="col-md-5">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            〒<%= @order.ship_postal_code %><br>
            <%= @order.ship_postal_address %><br>
            <%= @order.ship_name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-3 ml-5">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <td>商品合計</td>
          <td><%= @total %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="strong">ご請求額</td>
          <td><%= @order.request_money %></td>
        </tr>
      </table>
    </div>
  </div>

  <h4>注文内容</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <% @order.order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.purchase_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>