<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文情報確認</label>
  
  <div class="row">
    <table class="table table-bordered col-md-8">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% total = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_profile_image(30,30) %><%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <% total += subtotal %>
        </tr>
      </tbody>
      <% end %>
    </table>
    
    <table class="table table-bordered col-md-2">
      <tr>
        <td>送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= total %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= total.to_i + @order.postage.to %></td>
      </tr>
    </table>
  </div>
  
  <label>支払い方法</label>
  <%= @order.payment %>
  
  <label>お届け先</label>
  〒<%= @order.ship_postal_code %> <%= @order.ship_address %><br>
  <%= @order.ship_name %>
</div>