<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文情報確認</label>

  <div class="row">
    <table class="table table-bordered col-md-8">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_profile_image(30,30) %><%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

    <table class="table table-bordered col-md-2 ml-5">
      <tr>
        <td>送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= @total %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= @sum %></td>
      </tr>
    </table>
  </div>

  <label>支払い方法</label>
  <%= @order.payment_i18n %>

  <label>お届け先</label>
  〒<%= @order.ship_postal_code %> <%= @order.ship_postal_address %><br>
  <%= @order.ship_name %>

  <%= form_with model: @order, url: create_orders_path do |f| %>
    <%= f.hidden_field :ship_name %>
    <%= f.hidden_field :ship_postal_address %>
    <%= f.hidden_field :ship_postal_code %>
    <%= f.hidden_field :request_money, value: @sum %>
    <%= f.hidden_field :payment %>
    <%= f.submit "注文を確定する",class: "btn btn-success" %>
  <% end %>
</div>