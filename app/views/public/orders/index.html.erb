<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文履歴一覧</label>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.created_at %></td>
        <td>
          <%= order_detail.order.ship_postal_code %>
          <%= order_detail.order.ship_postal_address %>
          <%= order_detail.order.ship_name %>
        </td>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.order.request_money %></td>
        <td>
          <%= link_to root_path,class: "btn btn-primary" do %>
           表示する
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>