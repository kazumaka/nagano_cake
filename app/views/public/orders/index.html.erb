<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文履歴一覧</label>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= l order.created_at %></td>
        <td>
          〒<%= order.ship_postal_code %><br>
          <%= order.ship_postal_address %><br>
          <%= order.ship_name %>
        </td>
        <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
        </td>
        <td><%= order.request_money %></td>
        <td>
          <%= link_to order_path(order.id),class: "btn btn-primary" do %>
           表示する
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>