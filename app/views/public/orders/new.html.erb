<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文情報入力</label>

  <%= form_with model: @order,url order_confirm_path do |f| %>
    <div class="form-group">
      <h5>支払い方法</h5>
      <div class="ml-5">
      <%= f.radio_button :payment, Order.payments.key(0) %>
      <%= f.label :payment, "クレジットカード" %>
      </div>
      <div class="ml-5">
      <%= f.radio_button :payment, Order.payments.key(1) %>
      <%= f.label :payment, "銀行振込" %>
      </div>
    </div>

     <h5>お届け先</h5>
      <div class="form-group ml-5">
      <%= f.radio_button :address_id, 1 %>
      <%= f.label :ship_address_1, "ご自身の住所" %><br>
      〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %>
      </div>

      <div class="form-group ml-5">
      <%= f.radio_button :address_id, 2 %>
      <%= f.label :address_id_2, "登録済住所から選択" %><br>
      <%= f.select :address_id_2, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>

      <div class="form-group ml-5">
        <%= f.radio_button :address_id, 3 %>
        <%= f.label :address_id_3, "新しいお届け先" %><br>
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %><br>
        <%= f.label :name, "名前" %>
        <%= f.text_field :name %>
      </div>

      <%= f.submit "確認画面へ進む",class: "btn btn-primary ml-5" %>
  <% end %>

</div>