<div class="container">
  <label class="mt-4 mb-4 lead bg-light">商品編集</label>
  
  <div class="mr-5 ml-5">
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="form-group">
        <label>商品画像</label>
        <%= f.file_field :profile_image %>
      </div>
      <div class="form-group">
        <label>商品名</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label>商品説明</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <label>ジャンル</label>
        <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"} ) %>
      </div>
      <div class="form-group">
        <label>税抜価格</label>
        <%= f.text_field :price %>円
      </div>
      <div class="form-group">
        <label>販売ステータス</label>
        <%= f.radio_button :is_active, "true", checked: true %>販売中 <%= f.radio_button :is_active, "false" %>販売停止中
      </div>
      <%= f.submit "変更を保存",class: "btn btn-success" %>
    
    <% end %>
  </div>
</div>
