<div class="container">
      <%= form_with model: @customer,url: admin_customer_path do |f| %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4">
      <label class="mt-4 mb-4 lead bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</label>

      <div class="form-group">
        <label>会員ID</label>
        <%= f.text_field :id %>
      </div>
      <div class="form-group">
        <label>氏名</label>
        <%= f.text_field :last_name %><%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <label>氏名</label>
        <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
      </div>
      <div class="form-group">
        <label>郵便番号</label>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <label>住所</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label>電話番号</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <label>会員ステータス</label>
        <%= f.radio_button :is_active, "false",checked: true %>有効 <%= f.radio_button :is_active, "ture"  %>退会
      </div>
      <%= f.submit "変更を保存",class: "btn btn-success" %>
    </div>
  </div>
      <% end %>
</div>