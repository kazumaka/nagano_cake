<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer,url: admin_customer_path do |f| %>

<label>会員ID</label>
<%= f.text_field :id %>
<label>氏名</label>
<%= f.text_field :last_name %> <%= f.text_field :first_name %>
<label>氏名</label>
<%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
<label>郵便番号</label>
<%= f.text_field :postal_code %>
<label>住所</label>
<%= f.text_field :address %>
<label>電話番号</label>
<%= f.text_field :address %>
<label>メールアドレス</label>
<%= f.text_field :email %>
<label>会員ステータス</label>
<%= f.radio_button :is_active, "true",checked: true %>有効 <%= f.radio_button :is_active, "false" %>退会
<%= f.submit: "変更を" %>
<% end %>