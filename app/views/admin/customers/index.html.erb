<div class="container">
  <label class="mt-4 mb-4 lead bg-light">会員</label>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <%= @customers.each do |customer| %>
    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == true %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

