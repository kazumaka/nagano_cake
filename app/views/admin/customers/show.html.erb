<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <label class="mt-4 mb-4 lead bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</label>
      <div>
        <label>会員ID</label>
        <%= @customer.id %>
      </div>
      <div>
        <label>氏名</label>
        <%= @customer.last_name %> <%= @customer.first_name %>
      </div>
      <div>
        <label>フリガナ</label>
        <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
      </div>
      <div>
        <label>郵便番号</label>
        <%= @customer.postal_code %>
      </div>
      <div>
        <label>住所</label>
        <%= @customer.address %>
      </div>
      <div>
        <label>電話番号</label>
        <%= @customer.telephone_number %>
      </div>
      <div>
        <label>メールアドレス</label>
        <%= @customer.email %>
      </div>
      <div>
        <label>会員ステータス</label>
        <% if @customer.is_active == true %>
          退会
        <% else %>
          <label class="text-success">有効</label>
        <% end %>
      </div>
      <div class="mt-3">
        <%= link_to edit_admin_customer_path(@customer) do %>
          <label class="btn btn-success mr-5">編集する</label>
        <% end %>
        <%= link_to admin_root_path do %>
          <label class="btn btn-primary ml-5">注文履歴一覧を見る</label>
        <% end %>
      </div>
    </div>
  </div>
</div>