<h2>注文履歴詳細</h2>

<label>購入者</label>
<%= @order.customer.name %>
<label>注文日</label>
<%= @order.created_at %>
<label>配送先</label>

<label>支払い方法</label>
<%= @order.payment %>
<label>注文ステータス</label>
<%= @order.status %>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <!--<th>製作ステータス</th>-->
        </tr>
    </thead>
    <%= @order_details.each do |order_detail| %>
    <tbody>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.add_tax_purchase_price.to_s(:dalimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.add_tax_purchase_price.to_s(:dalimited) %>*<%= order_detail.amount.to_s %></td>
            <!--<td></td>-->
        </tr>
    </tbody>
    <% end %>
</table>
