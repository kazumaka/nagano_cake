<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
　<h4>ジャンル名</h4>
　<%= f.text_field :name %>
　<%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to edit_admin_genre_path(genre.id) do %>
            編集する
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>