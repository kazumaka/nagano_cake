<div class="container">
  <label class="mt-4 mb-4 lead bg-light">ジャンル一覧・追加</label>

  <div class="mt-3 mb-5">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
    　<label>ジャンル名</label>
    　<%= f.text_field :name %>
    　<%= f.submit "新規登録",class: "btn btn-success" %>
    <% end %>
  </div>

  <div row>
    <div class="col-md-3">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to edit_admin_genre_path(genre.id) do %>
                  <p class="btn btn-success btn-sm">編集する</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>