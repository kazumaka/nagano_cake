<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文履歴一覧</label>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= link_to root_path do %>
          <%= l order.created_at %>
          <% end %>
        </td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.order_details.count %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>