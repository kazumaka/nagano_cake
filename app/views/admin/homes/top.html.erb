<div class="container">
  <label class="mt-4 mb-4 lead bg-light">注文履歴一覧</label>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
    <%= @order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order(order_detail.order.id) do %>
          <%= order_detail.created_at %>
          <% end %>
        </td>
        <td><%= order_detail.order.customer_id %></td>
        <td><%= order_detail.amount %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>